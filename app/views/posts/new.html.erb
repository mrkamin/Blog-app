<section class="container">
<p class="post-title"> Add New Post :</p>
<%= form_with model: @post, url: user_posts_path do |f| %>
     <div>
     <%= f.label :title %> <br>
     <%= f.text_field :title %>
     </div>

     <div>
     <%= f.label :text %> <br>
     <%= f.text_field :text, placeholder: "Enter post text", row: 40, required: true %>
     </div>
     <br>
     <div>
     <%= f.submit "Submit Post" %>
     </div>
<% end %>

</section>